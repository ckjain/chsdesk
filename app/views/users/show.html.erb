<div class="box corner-all">
	<!--box header-->
	<div class="box-header grd-white color-silver-dark corner-top">
		<div class="header-control">
			<a data-box="collapse"><i class="icofont-caret-up"></i></a>
			<a data-box="close">&times;</a>
		</div>
		<span><%= @user.id if @user.id %>&nbsp;&nbsp;&nbsp;&nbsp;
			  <%= @user.name if @user.name %>
		</span>
	</div><!--/box header-->
	<!--box body-->
	<div class="box-body">
		<!--wizard-->
	<div id="form-wizard">
		<form name="form-wizard" id="wrapped" class="form-horizontal">
		<div class="step">
			<div class="control-group">
				<label class="control-label"></label>
				<div class="controls">
				<ul>
					<div class="page-header">
					<h4><%= t('users.options.roles') %></h4>
					</div>
					<% Role.all.each do |x| -%>
						<% if x.name.underscore.to_sym == :super_admin %>
						<% else %>
						<li>
						<%= link_to (@user.has_real_role?(x.name.underscore.to_sym) ? t('.take', :role => x.name.humanize.gsub(/-/, ' ')) : t('.grant', :role => x.name.humanize.gsub(/-/, ' '))), toggle_role_user_path(@user, x.name), :method => :post %>
						</li>
						<% end %>
					<% end -%>
				</ul>
				</div>
			</div>
			</div>
			</form>
		</div><!--/wizard-->
	</div><!--/box body-->
</div><!--/box-->
