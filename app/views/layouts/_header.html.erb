              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
          <%= link_to "Log Out", logout_path %>
                </li>
              </ul>
            </li>
          <% else %>
          <%= link_to "Sign Up", signup_path %> or
          <%= link_to "Log In", login_path %>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
